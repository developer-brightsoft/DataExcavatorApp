<Window x:Class="DEClientInterface.UIWindows.DECaptchaBehavior" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:DEClientInterface" xmlns:de_captcha_objects="clr-namespace:ExcavatorSharp.Captcha;assembly=ExcavatorSharp" xmlns:fa5="http://schemas.fontawesome.com/icons/" xmlns:fa="http://schemas.fontawesome.io/icons/" Title="PROJECTNAME ? Website CAPTCHA resolver" Width="638" SizeToContent="Height" xmlns:uiwindows="clr-namespace:DEClientInterface.UIWindows">  <Grid>    <Grid.ColumnDefinitions>      <ColumnDefinition Width="300" />      <ColumnDefinition Width="1*" />    </Grid.ColumnDefinitions>    <Grid.RowDefinitions>      <RowDefinition Height="37" />      <RowDefinition Height="37" />      <RowDefinition Height="37" />      <RowDefinition Height="37" />    </Grid.RowDefinitions>    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Padding="10,0,0,0" FontSize="16">CAPTCHA solving way:</TextBlock>    <Grid Row="0" Column="1">      <Grid.ColumnDefinitions>        <ColumnDefinition Width="1*" />        <ColumnDefinition Width="32" />      </Grid.ColumnDefinitions>      <ComboBox Name="DECaptchaTypeSelectBox" IsEnabled="False" Grid.Row="0" Grid.Column="0" Margin="3,3,0,3" FontSize="16">        <ComboBoxItem IsSelected="True">Manual solving (Modal window)</ComboBoxItem>      </ComboBox>      <Button Name="HelpButton_CaptchaType" Grid.Row="0" Grid.Column="1" Margin="-1,3,3,3" Style="{StaticResource HelpIconRectangle}">        <fa5:SvgAwesome Icon="Regular_QuestionCircle" Foreground="#2b71bc" VerticalAlignment="Center" HorizontalAlignment="Center" />      </Button>    </Grid>    <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Padding="10,0,0,0" FontSize="16">CAPTCHA detection substring:</TextBlock>    <Grid Row="1" Column="1">      <Grid.ColumnDefinitions>        <ColumnDefinition Width="1*" />        <ColumnDefinition Width="32" />      </Grid.ColumnDefinitions>      <TextBox Name="DECaptchaDetectionSubstring_TB" Grid.Column="0" Grid.Row="0" Margin="3,3,0,3" Style="{StaticResource TextBoxWithPlaceholder}" Tag="hcaptcha" FontSize="16" />      <Button Name="HelpButton_CaptchaDetectionSubstring" Grid.Row="0" Grid.Column="1" Margin="-1,3,3,3" Style="{StaticResource HelpIconRectangle}">        <fa5:SvgAwesome Icon="Regular_QuestionCircle" Foreground="#2b71bc" VerticalAlignment="Center" HorizontalAlignment="Center" />      </Button>    </Grid>    <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Padding="10,0,0,0" FontSize="16">Wait after and before resolve, seconds:</TextBlock>    <Grid Row="2" Column="1">      <Grid.ColumnDefinitions>        <ColumnDefinition Width="1*" />        <ColumnDefinition Width="32" />      </Grid.ColumnDefinitions>      <TextBox Name="DECaptchaWaitAfterAndBeforeResolving" Grid.Column="0" Grid.Row="0" Margin="3,3,0,3" Style="{StaticResource TextBoxWithPlaceholder}" Tag="7" FontSize="16" />      <Button Name="HelpButton_WaitAfterAndBeforeResolvingButton" Grid.Row="0" Grid.Column="1" Margin="-1,3,3,3" Style="{StaticResource HelpIconRectangle}">        <fa5:SvgAwesome Icon="Regular_QuestionCircle" Foreground="#2b71bc" VerticalAlignment="Center" HorizontalAlignment="Center" />      </Button>    </Grid>    <StackPanel Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" Orientation="Horizontal" Margin="5,5,3,5">      <Button Name="DeleteCAPTCHASettings" Padding="15,0" FontSize="16" Click="DeleteCAPTCHASettings_Click">        <StackPanel Orientation="Horizontal">          <fa5:SvgAwesome Icon="Regular_TimesCircle" Foreground="#2b71bc" VerticalAlignment="Center" HorizontalAlignment="Center" Width="16" Height="16" />          <TextBlock VerticalAlignment="Center" Margin="7,0,0,0">Clear CAPTCHA settings</TextBlock>        </StackPanel>      </Button>      <Button Name="SaveCAPTCHASettings" Padding="15,0" Margin="5,0,0,0" FontSize="16" Click="SaveCAPTCHASettings_Click">        <StackPanel Orientation="Horizontal">          <fa5:SvgAwesome Icon="Regular_Save" Foreground="#2b71bc" VerticalAlignment="Center" HorizontalAlignment="Center" Width="16" Height="16" />          <TextBlock VerticalAlignment="Center" Margin="7,0,0,0">Apply</TextBlock>        </StackPanel>      </Button>    </StackPanel>  </Grid></Window>