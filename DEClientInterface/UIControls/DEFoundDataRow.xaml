<UserControl x:Class="DEClientInterface.UIControls.DEFoundDataRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DEClientInterface.UIControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFB8D9FF" Margin="5,6,10,7">
        <StackPanel Orientation="Vertical">
            <TextBlock Name="FoundDataSelectorName" FontWeight="Bold" Margin="7,5,0,7" Foreground="#FF054693" FontSize="19">#1 ProductName</TextBlock>
            <StackPanel Name="MultipleValuesFound" Margin="7,0,0,7" Orientation="Horizontal" Visibility="Collapsed">
                <TextBlock FontSize="19">Multiple values found</TextBlock>
                <TextBlock Name="MultipleValuesFoundCounterTextArea" Margin="10,0,0,0" FontSize="19" />
            </StackPanel>
            <TextBlock Name="NoDataFound" Visibility="Collapsed" FontSize="19" Margin="7,0,0,7" FontWeight="Bold">No data found</TextBlock>
            <StackPanel Name="FoundDataItemsList" Orientation="Vertical" />
        </StackPanel>
    </Grid>
</UserControl>