<UserControl x:Class="DEClientInterface.UIControls.DEProjectTemplateCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DEClientInterface.UIControls" Margin="10,10,0,0" Width="280">    <Border BorderBrush="#FF1C85B8" BorderThickness="1" CornerRadius="9">        <Grid>            <Grid.RowDefinitions>                <RowDefinition Height="80" />                <RowDefinition Height="*" />            </Grid.RowDefinitions>            <Border Name="ProjectTopBlockShortNameOuter" Grid.Row="0" Background="#ebf3ff" CornerRadius="9,9,0,0">                <Grid Name="ProjectTemplateShortNameArea" Row="0">                    <TextBlock Name="ProjectShortNameTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontFamily="Calibri">{SN}</TextBlock>                </Grid>            </Border>            <Border Grid.Row="1" CornerRadius="0,0,9,9" Background="#FFFFFFFF">                <Grid Name="ProjectTemplateDetailsArea" Row="1" Margin="10,24">                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">                        <TextBlock Name="ProjectTemplateWebsiteURLTextBlock" HorizontalAlignment="Center" FontSize="17">              <Hyperlink Name="NavigateURLBlock" RequestNavigate="Hyperlink_RequestNavigate">                <TextBlock Name="WebsiteHyperLinkText">{website hyperlink}</TextBlock>              </Hyperlink>            </TextBlock>                        <TextBlock Name="ProjectTemplateShortDescriptionTextBlock" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="15" TextAlignment="Center" Margin="0,5,0,0">{project short description}</TextBlock>                        <TextBlock Name="ProjectUpdateDateTextBlock" HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="15" Foreground="#9e9e9e">{update date}</TextBlock>                        <Button Name="CreateProjectButton" Margin="0,18,0,0" HorizontalAlignment="Center" FontSize="15" Padding="10,3" Click="CreateProjectButton_Click">Create project</Button>                    </StackPanel>                </Grid>            </Border>        </Grid>    </Border></UserControl>
