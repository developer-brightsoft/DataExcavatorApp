<UserControl x:Class="DEClientInterface.UIControls.DEFilePreviewCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DEClientInterface.UIControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5,0,5,0">        <Grid.RowDefinitions>            <RowDefinition Height="1*" />            <RowDefinition Height="27" />        </Grid.RowDefinitions>        <Grid Name="ContentGrid" Row="0" Cursor="Hand" MouseLeftButtonDown="ContentGrid_MouseLeftButtonDown" />        <TextBlock Name="FileNameTextBlock" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top">FileName</TextBlock>    </Grid></UserControl>
